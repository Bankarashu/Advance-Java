<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="com.jspiders.springcorexml.bean.Company2Bean"
		name="company1">

		<property name="id" value="1" />
		<property name="name" value="TCS" />
		<property name="location" value="Mumbai" />
		<property name="employees">
			<list>
				<bean class="com.jspiders.springcorexml.bean.Employee2Bean"
					name="employee1">
					<property name="id" value="1" />
					<property name="name" value="Roshani" />
					<property name="salary" value="35000" />
				</bean>
				<bean class="com.jspiders.springcorexml.bean.Employee2Bean"
					name="employee1">
					<property name="id" value="2" />
					<property name="name" value="Ashu" />
					<property name="salary" value="45000" />
				</bean>
			</list>

		</property>

	</bean>

	<bean class="com.jspiders.springcorexml.bean.Company2Bean"
		name="company2">

		<property name="id" value="2" />
		<property name="name" value="Infosys" />
		<property name="location" value="Pune" />
		<property name="employees">
			<list>
				<bean class="com.jspiders.springcorexml.bean.Employee2Bean"
					name="employee1">
					<property name="id" value="3" />
					<property name="name" value="Dhruv" />
					<property name="salary" value="40000" />
				</bean>
				<bean class="com.jspiders.springcorexml.bean.Employee2Bean"
					name="employee1">
					<property name="id" value="4" />
					<property name="name" value="Bhumi" />
					<property name="salary" value="75000" />
				</bean>
			</list>

		</property>

	</bean>

</beans>